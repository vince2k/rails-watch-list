<%= render "navbar" %>
<div class="banner mb-5 d-flex align-items-center text-center text-white"
     style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(<%= @list.image_url %>);">
  <div class="container">
    <h1 class="fw-bold"><%= @list.name %></h1>
  </div>
</div>

<div class="container">

<div class="row mb-3">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <%= image_tag "https://tmdb.lewagon.com/movie/#{bookmark.movie.title}.jpg", class: "card-img-top", alt: bookmark.movie.title %>

        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
        </div>

        <div class="d-flex justify-content-center bg-dark">
          <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-primary ms-2 my-1" %>
        </div>
      </div>
    </div>
  <% end %>
</div>



  <h1>Add a movie to your <%= @list.name %> list</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, prompt: "Select a movie" %>
    <%= f.input :comment, placeholder: "Enter a comment about the movie" %>
    <%= f.submit "Add movie", class: "btn btn-primary mb-5" %>
  <% end %>
</div>
